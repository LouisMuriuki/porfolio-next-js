{
  "compilerOptions": {
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "target": "es6" /* Specify the ECMAScript target version for your code */,
    "module": "commonjs" /* Specify module code generation (CommonJS) */,
    "strict": true /* Enable strict mode */,
    "esModuleInterop": true /* Enable/disable emitting 'import * as ns from "mod"' for namespace imports */,
    "skipLibCheck": true /* Skip type checking of declaration files */,
    "forceConsistentCasingInFileNames": true /* Ensure that casing is consistent in file names */,
    "outDir": "./dist" /* Redirect output structure to the directory */,
    "rootDir": "./src" /* Specify the root directory of input files */,
    "declaration": true /* Generates corresponding '.d.ts' file */,
    "sourceMap": true /* Generates corresponding '.map' file */
  },
  "include": ["src/**/*.ts" /* Specify the files to include in compilation */],
  "exclude": [
    "node_modules" /* Specify the files to exclude from compilation */
  ]
}
